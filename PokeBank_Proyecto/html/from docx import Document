from docx import Document

# Crear un nuevo documento de Word
doc = Document()

# Agregar el título
doc.add_heading('Objetivos Pokémon Bank', level=1)

# Agregar el objetivo general
doc.add_heading('Objetivo General', level=2)
doc.add_paragraph("Desarrollar una interfaz web estática para el sistema "
                  "**Pokémon Bank**, que simule el funcionamiento de un cajero "
                  "automático (ATM) mediante el uso de **HTML5, CSS3 y un framework CSS**, "
                  "permitiendo a los usuarios realizar transacciones bancarias de forma intuitiva y responsiva.")

# Agregar los objetivos específicos
doc.add_heading('Objetivos Específicos', level=2)
objetivos = [
    "Diseñar una pantalla de inicio de sesión (Login) que permita el acceso mediante un PIN de 4 dígitos.",
    "Implementar una interfaz de acciones bancarias que incluya opciones de depósito, retiro, consulta de saldo y pago de servicios.",
    "Crear una pantalla de historial de transacciones, donde los usuarios puedan visualizar un registro detallado de sus operaciones.",
    "Desarrollar una vista de análisis gráfico, utilizando una librería como Chart.js, para representar los tipos de transacciones realizadas.",
    "Garantizar la adaptabilidad y usabilidad del sitio mediante el uso de Bootstrap o Materialize CSS para lograr un diseño responsivo.",
    "Investigar y documentar el proceso de versionamiento del código utilizando Git y GitHub."
]

for obj in objetivos:
    doc.add_paragraph(f"• {obj}")

# Guardar el archivo
file_path = "/mnt/data/Objetivos_Pokemon_Bank.docx"
doc.save(file_path)

